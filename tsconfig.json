{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "moduleResolution": "node"
  },
  "include": [
    "resources/**/*.ts",
    "resources/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
